{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0",
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "icons": {
    "16": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_title": "__MSG_appName__",
    "default_icon": {
      "16": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*", 
        "sounds/*", 
        "icon-32.png", 
        "icon-48.png", 
        "icon-128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "css": ["assets/content.css"],
      "run_at": "document_end"
    }
  ]
}